<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="1" author="reidallo" context="add not null constrain">
        <addNotNullConstraint tableName="book" columnName="title" columnDataType="varchar(50)"/>
    </changeSet>

    <changeSet id="2" author="reidallo" context="change datatype of password column at user table">
        <modifyDataType tableName="user" columnName="password" newDataType="varchar(255)"/>
    </changeSet>

    <changeSet id="3" author="reidallo" context="change datatype of id column at user_roles table">
        <modifyDataType tableName="user_roles" columnName="fk_user" newDataType="uuid"/>
    </changeSet>

    <changeSet id="4" author="reidallo" context="add active column to user table">
        <addColumn tableName="user">
            <column name="active" type="boolean"/>
        </addColumn>
    </changeSet>

    <changeSet id="5" author="reidallo" context="create mail verification token table">
        <createTable tableName="mail_verification">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="token" type="char(36)">
                <constraints nullable="false"/>
            </column>
            <column name="expiration_date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="fk_user" type="uuid">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="mail_verification" baseColumnNames="fk_user"
                                 constraintName="fk_user_token" referencedTableName="user"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="6" author="reidallo" context="add unique constraint to mail_verification table">
        <addUniqueConstraint tableName="mail_verification" columnNames="token"/>
    </changeSet>

    <changeSet id="7" author="reidallo" context="add active column to order table">
        <addColumn tableName="order">
            <column name="active" type="boolean"/>
        </addColumn>
    </changeSet>

    <changeSet id="8" author="reidallo" context="add authors and categories columns to book table">
        <addColumn tableName="book">
            <column name="authors" type="varchar(100)"/>
        </addColumn>
        <addColumn tableName="book">
            <column name="categories" type="varchar(100)"/>
        </addColumn>
    </changeSet>

    <changeSet id="9" author="reidallo" context="change table name for order table">
        <renameTable oldTableName="order" newTableName="order_bookstore"/>
    </changeSet>
</databaseChangeLog>
