<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="1" author="reidallo" context="create role table">
        <createTable tableName="role">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(25)"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="reidallo" context="create user table">
        <createTable tableName="user">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="varchar(25)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="email" type="varchar(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="varchar(25)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="3" author="reidallo" context="create book table">
        <createTable tableName="book">
            <column name="id" type="char(36)">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="title" type="varchar(50)"/>
            <column name="description" type="varchar(999)"/>
            <column name="price" type="decimal(5,2)"/>
        </createTable>
    </changeSet>

    <changeSet id="4" author="reidallo" context="create customer table">
        <createTable tableName="customer">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="first_name" type="varchar(25)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="varchar(25)">
                <constraints nullable="false"/>
            </column>
            <column name="address" type="varchar(100)"/>
            <column name="postal_code" type="int"/>
            <column name="city" type="varchar(50)"/>
            <column name="state" type="varchar(50)"/>
            <column name="phone" type="varchar(25)"/>
            <column name="fk_user" type="uuid">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="customer" baseColumnNames="fk_user"
                                 constraintName="fk_user" referencedTableName="user"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="5" author="reidallo" context="create order table">
        <createTable tableName="order">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="total" type="decimal(9,2)"/>
            <column name="fk_customer" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="order" baseColumnNames="fk_customer"
                                 constraintName="fk_customer" referencedTableName="customer"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="6" author="reidallo" context="create order_item table">
        <createTable tableName="order_item">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="date" type="date"/>
            <column name="quantity" type="bigint"/>
            <column name="price" type="decimal(9,2)"/>
            <column name="fk_book" type="char(36)">
                <constraints nullable="false"/>
            </column>
            <column name="fk_order" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="order_item" baseColumnNames="fk_book"
                                 constraintName="fk_book" referencedTableName="book"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="order_item" baseColumnNames="fk_order"
                                 constraintName="fk_order" referencedTableName="order"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="7" author="reidallo" context="create user_roles table">
        <createTable tableName="user_roles">
            <column name="fk_user" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="fk_role" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
